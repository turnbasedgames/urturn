{
  "name": "@urturn/template-react",
  "version": "0.0.1",
  "description": "template UrTurn game with ReactJS",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "rollup -c && mkdir -p build/frontend && cp index.js build/index.js && cp thumbnail.png build/thumbnail.png || cp -r frontend/build build/frontend/build",
    "dev": "concurrently \"npm run dev:runner\" \"npm run dev:frontend\"",
    "dev:runner": "runner --frontend-port 3000",
    "dev:rollup": "rollup -c -w",
    "dev:frontend": "cd frontend && cross-env BROWSER=none PORT=3000 npm start",
    "lint": "eslint . --ignore-path .gitignore --ext .js",
    "lint:fix": "eslint . --ignore-path .gitignore --ext .js --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turnbasedgames/urturn.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/turnbasedgames/urturn/issues"
  },
  "homepage": "https://github.com/turnbasedgames/urturn#readme",
  "devDependencies": {
    "@urturn/runner": "*",
    "concurrently": "^7.1.0"
  }
}
