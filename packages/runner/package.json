{
  "name": "@turnbasedgames/localrunner",
  "version": "0.0.1",
  "bin": {
    "localrunner": "bin/localrunner.js"
  },
  "scripts": {
    "start": "localrunner",
    "lint": "eslint . --ignore-path .gitignore --ext .js",
    "build": "concurrently \"cd frontend && npm run build\" \"cd test_app/frontend && npm run build\"",
    "dev": "concurrently \"localrunner -de -t http://localhost:3100 -f http://localhost:3101\" \"cd frontend && PORT=3100 npm start\" \"cd test_app/frontend && BROWSER=none PORT=3101 npm start\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turnbasedgames/localrunner.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/turnbasedgames/localrunner/issues"
  },
  "homepage": "https://github.com/turnbasedgames/localrunner#readme",
  "files": [
    "bin/",
    "src/",
    "config/",
    "test_app/frontend/build/",
    "test_app/src/",
    "test_app/index.js",
    "frontend/build/"
  ],
  "description": "",
  "dependencies": {
    "commander": "^9.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status-codes": "^2.2.0",
    "socket.io": "^4.5.0"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0"
  }
